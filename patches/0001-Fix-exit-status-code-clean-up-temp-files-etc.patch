-# Script acceptable as a value for GIT_EXTERNAL_DIFF.
-# For example, you can see the changes in your working tree with
-# 
-# $ GIT_EXTERNAL_DIFF=git-oodiff diff
+[ "$debug" ] && set -x
+
+tmpbase=/tmp/oodiff.$$
 
 convert_to_txt ()
 {
-    if [ x"$1" = x"/dev/null" ]; then
-        printf "" > /tmp/oodiff.$$."$2"
+    if [ "$1" = "/dev/null" ]; then
+        : > /tmp/oodiff.$$."$2"
         eval "label$2=/dev/null/"
     else
-        odt2txt "$1" > /tmp/oodiff.$$."$2" 2>/dev/null
+        odt2txt "$1" > $tmpbase."$2"
     fi
 }
 
+Main ()
+{
+    dummy_arg_list="$*"		# For debugging
+
+    label1="a/$1"
+    label2="b/$1"
 
-label1="a/$1"
-label2="b/$1"
+    if [ "$#" = "1" ]; then
+	echo "Unmerged path $1"
+	exit 0
+    fi
 
-if [ "$#" = "1" ]; then
-    echo "Unmerged path $1"
-    exit 0
-fi
+    msg=""
 
-msg=""
-if   [ x"$4" = x"." ]; then
-    msg="new file mode $7
+    if   [ "$4" = "." ]; then
+	msg="new file mode $7
 "
-elif [ x"$7" = x"." ]; then
-    msg="deleted file mode $4
+    elif [ "$7" = "." ]; then
+	msg="deleted file mode $4
 "
-elif [ x"$4" != x"$7" ]; then
-    msg="old mode $4\nnew mode $7
+    elif [ ! "$4" = "$7" ]; then
+	msg="\
+old mode $4
+new mode $7
 "
-fi
-
-if convert_to_txt "$2" "1" &&
-    convert_to_txt "$5" "2" ; then
-    echo $(basename $0) "$label1" "$label2"
-    printf "%s" "$msg"
-    if diff -L "$label1" -L "$label2" -u /tmp/oodiff.$$.{1,2}; then
-        # no text change
-        if diff -q "$2" "$5"; then
-            : # no change at all
-        else
-            echo "OpenDocument files a/$1 and b/$1 files differ (same text content)"
-        fi
     fi
-else
-    # conversion failed. Fall back to plain diff.
-    echo diff -u "$label1" "$label2"
-    printf "%s" "$msg"
-    diff -L "$label1" -L "$label2" -u "$2" "$5"
-fi
 
-rm -f /tmp/oodiff.$$.{1,2}
+    status=0
+    fhead="$2"
+    fdisk="$5"
+
+    if convert_to_txt "$fhead" "1" &&
+	convert_to_txt "$fdisk" "2"
+    then
+	echo `basename $0` "$label1" "$label2"
+
+	[ "$msg" ] && echo -e "$msg"
+
+	if diff -L "$label1" -L "$label2" -u "$tmpbase.1" "$tmpbase.2"
+	then
+	    echo "No content difference HEAD and $fdisk"
+	fi
+    else
+	# conversion failed. Fall back to plain diff.
+
+	echo diff -u "$label1" "$label2"
+	echo -e "$msg"
+
+	diff -L "$label1" -L "$label2" -u "$fhead" "$fdisk"
+	status=$?
+    fi
+
+    if [ ! "$debug" ]; then
+       rm -f "$tmpbase.1" "$tmpbase.2"
+    fi
+
+    exit $status
+}
+
+Main "$@"
 
